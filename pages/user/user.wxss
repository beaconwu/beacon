/* pages/user/user.wxss */
page{background: #E9EDF1}
.bg-color {background-color: #E53935!important;}
.user .header{padding:0 30rpx;height:190rpx;position:relative;}
.user .header:after { position: absolute;left: 0;right: 0;bottom: -98rpx;z-index: -1;content:'';height:100rpx;width: 100%;border-radius: 0 0 50% 50%;background-color: #E53935;}
.user .header .picTxt .pictrue{width:120rpx;height:120rpx;}
.user .header .picTxt .pictrue image{width:100%;height:100%;border-radius:50%;border:2rpx solid #f5f5f5;}
.user .header .picTxt .text{width:434rpx;color:rgba(255,255,255,1);margin-left:35rpx;}
.user .header .picTxt .text .name{font-size:32rpx;max-width:270rpx;}
.user .header .picTxt .text .member{padding:0 10rpx;height:36rpx;background-color:rgba(0, 0, 0, 0.2);font-size:20rpx;border-radius:30rpx;margin-left:17rpx;}
.user .header .picTxt .text .member image{width:28rpx;height:28rpx;font-size:20rpx;margin-right:8rpx;}
.user .header .picTxt .text .phone{color:rgba(255,255,255,0.6);font-size:26rpx;margin-top:15rpx;}
.user .header .fonttxt{font-size:30rpx;margin-left:12rpx;color: rgba(255,255,255,1);}
.user .wrapper{padding:0 20rpx;}
.user .wrapper .w-item{background-color:#fff;border-radius:6rpx;margin-bottom: 20rpx;}
.user .wrapper .w-item .title{height: 88rpx;line-height: 88rpx;padding: 0 20rpx;position: relative;font-size: 32rpx;color: #323233}
.user .wrapper .w-item .title::after{content: "";position: absolute;left: 20rpx;bottom: 0;height: 2rpx;width:calc(100% - 40rpx);background: #D8D8D8;}
.user .wrapper .w-item .title .more{font-size: 28rpx;color: #999999;align-items: center;}
.user .wrapper .w-item .title .icon-arrow{width: 24rpx;height: 24rpx;padding:0 10rpx;vertical-align: middle;}
.user .wrapper .w-item .icon-location{width: 32rpx;height: 32rpx;vertical-align: middle;margin-right: 5rpx;}
.text-location{padding: 20rpx;font-size: 28rpx;}
.text-location-item{line-height: 65rpx;color: #666}
.text-location-item text{color: #999}
.menuState {height: 160rpx;}
.menuState .item {font-size: 26rpx;color: #454545;flex: 1;text-align: center;}
.menuState .item .pictrue {width: 49rpx;height: 42rpx;margin: 0 auto 18rpx auto;}
.menuState .item .pictrue image {width: 100%;height: 100%;}
.no-data{text-align: center;padding: 40rpx 20rpx;display: block;font-size: 28rpx;color: #666;}
.order-item-txt{font-size: 24rpx;color: #A4A4A5;margin-bottom: 20rpx;}
.order-item-txt text{color: #666666;}
.order-item-txt .btn{border: 1px solid #FF9900;width: 170rpx;height: 40rpx;line-height: 40rpx;text-align: center;color: #FF9900}
.order-item{padding: 30rpx 20rpx 20rpx;position: relative;}
.order-item::after{content: "";position: absolute;left: 20rpx;bottom: 0rpx;height: 1rpx;width:calc(100% - 40rpx);border: 1px solid #ddd;}
.order-item:nth-last-child(1)::after{border: none;}
.order-main{margin: 0 auto 20rpx;display: flex}
.pictrue{width: 170rpx;height: 170rpx;}
.pictrue image{width: 170rpx;height: 170rpx;}
.info{padding-left: 20rpx;width: 100%}
.info .tit{font-size: 32rpx;line-height: 60rpx;}
.info .price{font-size: 32rpx;color: #E53935;margin-bottom: 20rpx;}
.info .txt{font-size: 28rpx;}
.txt-btn{color: #999;width: 100%}
.txt-btn .btn{background-color:#FF9900;width: 116rpx;height: 48rpx;line-height: 48rpx;text-align: center;border-radius:6rpx;color: #fff;font-size: 24rpx;}