.modal-box{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
  z-index: 310
}
.modal-body{
  /* position:relative; */
  width: 100%;
  height: 100%;
  padding: 0 20rpx;
  display: flex
