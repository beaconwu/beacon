/**index.wxss**/
page{font-size:28rpx;background-color: #f5f5f5; color: #333;}
view{box-sizing:border-box;}
page{background-color:#fff!important;}

/* 定位 */
.top-box{background-color: #E53935;display: flex;height: 74rpx;line-height:74rpx;padding: 0 20rpx;color: #fff;justify-content: space-between;position: fixed;left: 0;top: 0;width: 100%;z-index: 999;align-items: center;
}
.location{display: flex;align-items: center;}
.location image{width:34rpx;height:34rpx;}
.location .txt{font-size:28rpx;padding-left:5rpx;width: 60px;overflow:hidden;text-overflow:ellipsis;white-space:nowrap }
.slogan{text-align: center;width: 100%;position: absolute;left: 0;top: 0}
.share{width: 34rpx;height: 34rpx;align-items: center;flex-wrap: wrap;background: #E53935;overflow: auto;padding: 0;line-height: auto;text-align: right;border: none;font-size: 0;margin-right: 15rpx;padding-right: 0;border-radius: 0%;}
.share::after{border: none;}
.share image{width:100%;height:100%;}
/* banenr */
.swiper-box {margin:94rpx 20rpx 20rpx;}
.swiper-box .index-bg{width:100%;height:375rpx;position:relative;}
.swiper-box .index-bg swiper{width:100%;height:100%;position:relative;}
.swiper-box .index-bg .slide-navigator{width:100%;height:100%;}
.swiper-box .index-bg .slide-navigator .slide-image{width:100%;height:100%;border-radius: 20rpx}
.swiper-box .index-bg .wx-swiper-dot{width:20rpx;height:5rpx;border-radius:3rpx;}
.swiper-box .index-bg .wx-swiper-dots.wx-swiper-dots-horizontal{margin-bottom:5rpx;}
/* 订单播报 */
.broadcast{padding:0 20rpx 20rpx;height: 30rpx;display: flex;align-items: center;flex-wrap: wrap;box-sizing: border-box;}
.broadcast-icon{width:28rpx;height:30rpx;box-sizing: content-box;}
.broadcast image{width:100%;height:100%;}
.broadcast .swiperTxt{font-size:28rpx;color: #585858;height: 35rpx;line-height: 35rpx;overflow: hidden;width: calc(100% - 28rpx);padding-left: 20rpx;box-sizing: border-box;}
/* 商品 */
.goodlist{padding: 20rpx;}
.gooditem{display: flex;align-items: center;justify-content: space-between;margin-bottom: 30rpx;}
.gooditem .pictrue{width: 204rpx;height: 204rpx;}
.gooditem .pictrue image{ width: 210rpx;height: 210rpx;border-radius: 6rpx;}
.goodintro{padding: 5rpx 0rpx 0rpx 20rpx;}
.goodintro .tit-price{align-items: center;justify-content: space-between;display: flex;font-weight: bold;}
.goodintro .tit{font-size: 30rpx;color: #333;}
.goodintro .price{font-size: 30rpx;color: #E53935;}
.goodintro .intro{color: #999;font-size: 26rpx;margin: 15rpx 0 10rpx;line-height: 45rpx;}
.goodintro .btm-box{font-size: 26rpx;display: flex;position: relative;align-items: center;justify-content: space-between;}
.goodintro .btm-box .sum text{color: #E53935}
.goodintro .btm-box .btn{background: #E53935;color: #fff;text-align: center;border-radius: 52rpx;width: 156rpx;height:52rpx;line-height: 52rpx;}
.goodintro .btm-box .time{color:rgba(227,57,53, .5);position: absolute;right: 0;bottom: 65rpx;font-size: 20rpx}
.goodintro .btm-box .time text{color: #fff;background: rgba(227,57,53, .7);padding: 0 4rpx;margin: 0 3.5rpx;border-radius:2rpx;}
