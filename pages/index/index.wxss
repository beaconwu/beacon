.mm-item .img{margin-bottom: 10rpx;}
.modal-main{padding-bottom:60rpx;  background: #fff;}
.mm-item{width: 50%;text-align: center;}
.modal-content .colse{border-radius:0%;font-size: 34rpx;background-color: #fff;line-height: 98rpx;}
